                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/str_3"
                    android:textSize="@dimen/content_text_size" />
            </TableRow>

            <TableRow
