                android:layout_height="wrap_content"
                android:background="#d4d4d4" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/txt_8"
                    android:textSize="@dimen/content_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/txt_9"
                    android:textSize="@dimen/content_text_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e8e8e8" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="a) Ball Bearing Hinge"
                    android:textSize="@dimen/content_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/str_1"
                    android:textSize="@dimen/content_text_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e5e5e5" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="b) Single Action Spring Hinge"
                    android:textSize="@dimen/content_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="5dp"                   
                    android:text="@string/str_2"
                    android:textSize="@dimen/content_text_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
