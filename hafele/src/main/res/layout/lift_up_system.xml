            android:layout_marginTop="10dp"
            android:background="#808080" />

        <TextView
            android:id="@+id/stp_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Step 1"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/txt_1"
            android:textSize="@dimen/content_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/door_wdt_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Width  "
                android:textSize="@dimen/content_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/door_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="   mm"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="@dimen/content_text_size" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/door_hgt_txt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Height  "
                android:textSize="@dimen/content_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/door_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="   mm"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="@dimen/content_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/door_thickness_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Thickness  "
                android:textSize="@dimen/content_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/door_thickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="   mm"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="@dimen/content_text_size" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/glass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector"
                android:text="Glass" />

            <RadioButton
                android:id="@+id/wood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/chekcbox_selector"
                android:text="Wood" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Weight of Door  "
                android:textSize="@dimen/content_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/door_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="5dp"
                android:textSize="@dimen/content_text_size" />
