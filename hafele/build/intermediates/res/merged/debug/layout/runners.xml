        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Weight of contents in drawer is as per the available weight range"
            android:textSize="@dimen/content_text_size" />

        <LinearLayout
