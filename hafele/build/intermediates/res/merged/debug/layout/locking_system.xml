<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:padding="5dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/customer_information_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#808080" />

        <TextView
            android:id="@+id/stp_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Step 1"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Correct Product"
            android:textSize="@dimen/content_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ml_chk_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="Yes"
                android:textSize="@dimen/content_text_size" />

            <CheckBox
                android:id="@+id/ml_chk_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="No"
                android:textSize="@dimen/content_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wrong_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Reason For Wrong Product"
                android:textSize="@dimen/content_text_size" />

            <Spinner
                android:id="@+id/spin_wrong_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dropdown"
                android:entries="@array/spinner_wrong_product" />
        </LinearLayout>

        <TextView
            android:id="@+id/stp_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Step 2"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Lock is Working"
            android:textSize="@dimen/content_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ml_chk_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="Yes"
                android:textSize="@dimen/content_text_size" />

            <CheckBox
                android:id="@+id/ml_chk_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="No"
                android:textSize="@dimen/content_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/stp_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Step 3"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Cut-out dimensions are correct"
            android:textSize="@dimen/content_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ml_chk_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="Yes"
                android:textSize="@dimen/content_text_size" />

            <CheckBox
                android:id="@+id/ml_chk_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="No"
                android:textSize="@dimen/content_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/attach_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:padding="5dp"
                android:text="Attach Image"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/attach_vid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:padding="5dp"
                android:text="Attach Video"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <GridView
                android:id="@+id/img_grid"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.10"
                android:numColumns="3" />


            <!-- <GridView -->
            <!-- android:id="@+id/video_grid" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="120dp" -->
            <!-- android:layout_weight="1" -->
            <!-- android:layout_marginTop="5dp" -->
            <!-- android:numColumns="3" /> -->

            <ImageView
                android:id="@+id/video_grid"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_deleteVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="Delete"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/new_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Status "
                android:textSize="@dimen/content_text_size" />

            <Spinner
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/dropdown"
                android:entries="@array/status" />
        </LinearLayout>
<!--
        <LinearLayout
            android:id="@+id/unresolved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Reason for Unresolved "
                android:textSize="@dimen/content_text_size" />

            <Spinner
                android:id="@+id/unresolve_reason"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/dropdown"
                android:entries="@array/reason_array" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Other "
                android:textSize="@dimen/content_text_size" />

            <EditText
                android:id="@+id/other_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="5dp" />
        </LinearLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Comments "
                android:textSize="@dimen/content_text_size" />

            <EditText
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="5dp" />
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>