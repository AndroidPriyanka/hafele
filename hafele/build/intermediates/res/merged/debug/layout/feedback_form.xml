<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e6e6e6"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Date Of Feedback"
            android:textSize="@dimen/content_text_size" />

        <EditText
            android:id="@+id/date_of_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:inputType="datetime"
            android:padding="5dp"
            android:textSize="@dimen/content_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Technician Name"
            android:textSize="@dimen/content_text_size" />

        <EditText
            android:id="@+id/carpenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:textSize="@dimen/content_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="How would you rate technician who visited site?"
            android:textSize="@dimen/content_text_size" />

        <Spinner
            android:id="@+id/site_v_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dropdown"
            android:entries="@array/rating"
            android:textSize="@dimen/content_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Customer Care Executive Name"
            android:textSize="@dimen/content_text_size" />

        <EditText
            android:id="@+id/cc_executive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:textSize="@dimen/content_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="How would you rate the Customer Care Executive?"
            android:textSize="@dimen/content_text_size" />

        <Spinner
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dropdown"
            android:entries="@array/rating"
            android:textSize="@dimen/content_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Would you recommend Hafele to your friends and family?"
            android:textSize="@dimen/content_text_size" />

        <LinearLayout
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/radio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector" />

            <CheckBox
                android:id="@+id/radio_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector" />

            <CheckBox
                android:id="@+id/radio_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector" />

            <CheckBox
                android:id="@+id/radio_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector" />

            <CheckBox
                android:id="@+id/radio_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector" />

            <CheckBox
                android:id="@+id/radio_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector" />

            <CheckBox
                android:id="@+id/radio_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector" />

            <CheckBox
                android:id="@+id/radio_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector" />

            <CheckBox
                android:id="@+id/radio_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector" />

            <CheckBox
                android:id="@+id/radio_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/chekcbox_selector" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="180dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/content_text_size"
            android:padding="10dp" 
            android:layout_marginRight="7dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" 
            android:textSize="@dimen/content_text_size"
            android:padding="10dp" 
            android:layout_marginRight="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/content_text_size"
            android:padding="10dp"
            android:layout_marginRight="7dp"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" 
            android:textSize="@dimen/content_text_size"
            android:padding="10dp"
            android:layout_marginRight="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" 
            android:textSize="@dimen/content_text_size"
            android:padding="10dp"
            android:layout_marginRight="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="@dimen/content_text_size"
            android:padding="10dp" 
            android:layout_marginRight="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" 
            android:textSize="@dimen/content_text_size"
            android:padding="10dp" 
            android:layout_marginRight="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="@dimen/content_text_size"
            android:padding="10dp" 
            android:layout_marginRight="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="@dimen/content_text_size"
            android:padding="10dp" 
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="@dimen/content_text_size"
            android:padding="10dp"
            android:layout_marginRight="5dp"  />
    </LinearLayout>
    
     <TextView
      
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:padding="5dp"
         android:textSize="@dimen/content_text_size"
        android:text="1 -> Less likely 10 -> most likely" />

    <TextView
        android:id="@+id/hafele_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:padding="5dp"
         android:textSize="@dimen/content_text_size"
        android:text="Rate Hafele"
        android:textStyle="bold" />
