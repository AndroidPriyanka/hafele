                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/txt_6"
                android:textSize="@dimen/content_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/floor_chk_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:button="@drawable/radio_selector"
                    android:text="Yes"
                    android:textSize="@dimen/content_text_size" />

                <CheckBox
                    android:id="@+id/floor_chk_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:button="@drawable/radio_selector"
                    android:text="No"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>

            <!--             <LinearLayout -->
            <!--                 android:layout_width="wrap_content" -->
            <!--                 android:layout_height="wrap_content" -->
            <!--                 android:orientation="horizontal" > -->

            <TextView
                android:id="@+id/stp_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Step 5"
                android:textSize="@dimen/content_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/txt_7"
                android:textSize="@dimen/content_text_size" />
            <!--             </LinearLayout> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/floor_chk_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:button="@drawable/radio_selector"
                    android:text="Yes"
                    android:textSize="@dimen/content_text_size" />

                <CheckBox
                    android:id="@+id/floor_chk_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:button="@drawable/radio_selector"
                    android:text="No"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/attach_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:padding="5dp"
                    android:text="Attach Image"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/attach_vid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:padding="5dp"
                    android:text="Attach Video"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <GridView
                    android:id="@+id/img_grid"
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.10"
                    android:numColumns="3" />


                <!-- <GridView -->
                <!-- android:id="@+id/video_grid" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="120dp" -->
                <!-- android:layout_weight="1" -->
                <!-- android:layout_marginTop="5dp" -->
                <!-- android:numColumns="3" /> -->

                <ImageView
                    android:id="@+id/video_grid"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_deleteVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background"
                        android:text="Delete"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/content_text_size" />
                </LinearLayout>

            </LinearLayout>

            <include
                layout="@layout/new_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Status "
                    android:textSize="@dimen/content_text_size" />

                <Spinner
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/dropdown"
                    android:entries="@array/status" />
            </LinearLayout>

